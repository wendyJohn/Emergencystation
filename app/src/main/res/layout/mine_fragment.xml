<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_userhead"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_160"
            android:background="@color/white"
            android:gravity="center">

            <com.sanleng.emergencystation.view.CircleImgView
                android:id="@+id/iv_userhead"
                android:layout_width="@dimen/widget_size_60"
                android:layout_height="@dimen/widget_size_60"
                android:layout_marginRight="@dimen/widget_size_10"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_size_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_headname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="18111111111"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/changepassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_45"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="@drawable/selector_mine_item_bg">

            <ImageView
                android:id="@+id/item_search_img"
                android:layout_width="@dimen/widget_size_40"
                android:layout_height="@dimen/widget_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_search_img"
                android:text="修改密码"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/item_search_add"
                android:layout_width="@dimen/widget_size_20"
                android:layout_height="@dimen/widget_size_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/widget_size_10"
                android:src="@drawable/into_pic" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/scavengingcaching"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_45"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="@drawable/selector_mine_item_bg">

            <ImageView
                android:id="@+id/item_search_imgb"
                android:layout_width="@dimen/widget_size_40"
                android:layout_height="@dimen/widget_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_search_textb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_search_imgb"
                android:text="清除缓存"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/item_search_addb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="0.0KB" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/faceregistration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_45"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="@drawable/selector_mine_item_bg">

            <ImageView
                android:id="@+id/item_search_imgcs"
                android:layout_width="@dimen/widget_size_40"
                android:layout_height="@dimen/widget_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_search_textcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_search_imgcs"
                android:text="人脸注册"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/item_search_addcs"
                android:layout_width="@dimen/widget_size_20"
                android:layout_height="@dimen/widget_size_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/widget_size_10"
                android:src="@drawable/into_pic" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/versionupdate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_45"
            android:layout_marginTop="@dimen/widget_size_10"
            android:background="@drawable/selector_mine_item_bg">

            <ImageView
                android:id="@+id/item_search_imgd"
                android:layout_width="@dimen/widget_size_40"
                android:layout_height="@dimen/widget_size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_search_textd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/item_search_imgd"
                android:text="版本更新"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:id="@+id/item_search_addd"
                android:layout_width="@dimen/widget_size_20"
                android:layout_height="@dimen/widget_size_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/widget_size_10"
                android:src="@drawable/into_pic" />
        </RelativeLayout>


        <TextView
            android:id="@+id/login_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/widget_size_60"
            android:layout_marginBottom="30dp"
            android:background="@drawable/selector_mine_logout_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/widget_size_100"
            android:paddingTop="@dimen/widget_size_10"
            android:paddingRight="@dimen/widget_size_100"
            android:paddingBottom="@dimen/widget_size_10"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</ScrollView>