<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/record_view"
    android:background="@color/gray_thin">

    <RelativeLayout
        android:id="@+id/linyears"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/widget_size_10">

        <ImageView
            android:id="@+id/rebacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/back_icon"
            android:gravity="center" />

        <TextView
            android:id="@+id/tis_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="使用记录"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <View
        android:id="@+id/views"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linyears"
        android:background="@color/gray_thin" />

    <LinearLayout
        android:id="@+id/ll_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/views"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_thin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/timeselection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginBottom="@dimen/widget_size_10"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableRight="@mipmap/record_times"
                    android:drawablePadding="@dimen/widget_size_5"
                    android:text="时间"
                    android:textColor="#1adcff"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginBottom="@dimen/widget_size_10"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="操作人"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/operationselection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginBottom="@dimen/widget_size_10"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableRight="@mipmap/record_cz"
                    android:drawablePadding="@dimen/widget_size_5"
                    android:text="操作"
                    android:textColor="#1adcff"
                    android:textSize="@dimen/text_size_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginBottom="@dimen/widget_size_10"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="物资类型"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#43E4E2E2" />

        <ListView
            android:id="@+id/record_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_thin"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="1.0px"
            android:drawSelectorOnTop="false"
            android:listSelector="@android:color/transparent"></ListView>


    </LinearLayout>

</RelativeLayout>